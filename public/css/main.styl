@import 'nib/vendor'
@import 'nib/gradients'
@import 'normalize'

color1 = #00bd00
mono = cousine, courier new, monospace
sans = Raleway, arial, sans-serif
fat = bold 30px\/1.3em Raleway, arial, sans-serif

body 
  line-height 1em
  font-family sans
  letter-spacing 1px
  font-size 16px
  line-height 22px
  font-weight 600
header 
  border-bottom 1px solid color1
  padding 50px 0 70px 40px
  h1
    float left
    a:hover
      border none
    .logo 
      width 214px
      height auto
      position relative
      top -22px
  .nav 
    float left
    margin 4px 0 0 230px
.nav li, .pagination li 
  display block
  float left
  margin 0 20px

// Content

.content
  .highlight
    background color1
    color white
    padding 50px 0
    text-align center
    font fat
    font-weight 600
  h1 
    margin 0 0 20px 0
  li 
    list-style-type none
    &:before 
      content "â€”"
      padding 0 20px 0 0

// Object

.object-box
  clearfix()
  border-bottom 1px solid color1
  .object-image
    float left
    border-right 1px solid color1
    img
      display block
  .object-meta 
    float left
    padding 40px
    font-family mono
    font-size 12px
    font-weight normal
    p 
      margin 0 0 13px 0
      line-height 15px
    li 
      display inline
  .object-content
    max-width 500px
    float left
    padding 40px
    .download 
      margin-bottom 20px

// Object in lists

.content.list
  .object-box
    .object-meta
      padding 0
      width calc(100% \- 600px)
      .object-name
        margin 130px 0 80px 80px
        font fat
        text-align center
      .object-designer
        display none

// Object in single page

.content.single
  .object-box
    .object-image
      border-bottom 1px solid color1
    .object-meta
      width 400px
    .object-content
      width 500px
      float left
      .download
        line-height 2em
        a
          background color1
          padding 5px
          color white

// Search page

.content.search
  .highlight
    input, button
      border 1px solid white
      background transparent
      color white
      padding 3px 5px
    button
      border-left none
      padding 3px 10px

// Content pages

.textonly
  padding 80px 40px
  width 100%
  max-width 800px

.pagination 
  margin 20px 20px 0 20px

footer 
  clear both
  padding 20px 0 20px 40px
  font-family mono
  font-size 14px
  font-weight normal
a 
  color color1
  text-decoration none
  transition color .1s
  &:hover
    color black
    border-bottom 2px solid black

::selection
  background #EAEAEA
  color color1
::-moz-selection
  background #EAEAEA
  color color1